@model Leave_Mangement_System.Models.LeaveRequest
@{
    ViewData["Title"] = "Delete Leave Request";
}

<h1>Delete Leave Request</h1>
<h3>Are you sure you want to delete this leave request?</h3>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Request ID</dt>
            <dd class="col-sm-8">#@Model.RequestId</dd>

            <dt class="col-sm-4">Employee</dt>
            <dd class="col-sm-8">@Model.Employee?.EmployeeName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Employee?.Email</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.Employee?.Department?.Name</dd>

            <dt class="col-sm-4">Leave Type</dt>
            <dd class="col-sm-8">@Model.LeaveType</dd>

            <dt class="col-sm-4">Period</dt>
            <dd class="col-sm-8">
                @Model.StartDate.ToString("dd/MM/yyyy") to @Model.EndDate.ToString("dd/MM/yyyy")
            </dd>

            <dt class="col-sm-4">Days</dt>
            <dd class="col-sm-8">@Model.NumberOfDays days</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">
                @if (Model.IsRejected)
                {
                    <span class="badge bg-danger">Rejected</span>
                }
                else if (Model.HrApproved && Model.ManagerApproved)
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.ManagerApproved)
                {
                    <span class="badge bg-warning">Manager Approved</span>
                }
                else
                {
                    <span class="badge bg-secondary">Pending</span>
                }
            </dd>
        </dl>
    </div>
</div>

@if (Model.HrApproved && Model.ManagerApproved)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This request is already approved. Deleting it will NOT restore the leave balance.
    </div>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="RequestId" />
    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this leave request? This action cannot be undone.');" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

