@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="text-center mb-0">Access Denied</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-ban fa-5x text-danger"></i>
                </div>
                <h4>You don't have permission to access this resource.</h4>
                <p class="text-muted">
                    This page requires Manager or HR privileges.
                    If you believe this is an error, please contact your administrator.
                </p>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home"></i> Go to Home
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-secondary">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
