@model List<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1 class="top-block">Employees Management</h1>

@if (User.IsInRole("HRPrimary"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Create New Employee
        </a>
    </p>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="custom-table-header">
            <tr>
                <th>ID</th>
                <th>Employee Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Position</th>
                <th>Leave Balance</th>
                <th>User Account</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmpId</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.Email</td>
                    <td>@item.Department.Name</td>
                    <td>
                        @if (item.Manager)
                        {
                            <span class="badge bg-light text-dark">Manager</span>
                        }
                        @if (item.Hr)
                        {
                            <span class="badge bg-light text-dark">HR</span>
                        }
                        @if (!item.Manager && !item.Hr)
                        {
                            <span class="badge bg-light text-muted">Employee</span>
                        }
                    </td>
                    <td>@item.LeaveBalance days</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.UserId))
                        {
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-check text-success"></i> Linked
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-times text-muted"></i> No Account
                            </span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.EmpId"
                               class="btn btn-link btn-sm text-secondary" title="Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.EmpId"
                               class="btn btn-link btn-sm text-secondary" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>

                            @if (User.IsInRole("HRPrimary"))
                            {
                                @if (!string.IsNullOrEmpty(item.UserId))
                                {
                                    <form asp-action="ResetPassword" asp-route-employeeId="@item.EmpId"
                                          method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-link btn-sm text-secondary"
                                                title="Reset Password"
                                                onclick="return confirm('Reset password for @item.EmployeeName? New password will be generated and emailed.')">
                                            <i class="fas fa-key"></i>
                                        </button>
                                    </form>
                                }

                                <a asp-action="Delete" asp-route-id="@item.EmpId"
                                   class="btn btn-link btn-sm text-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <style>
        .top-block {
            margin-top: 35px;
            font-size: 20px;
            font-family: "PT Sans", sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            color: #103A71;
        }

        .custom-table-header {
            background-color: #103A71 !important;
            color: white !important;
        }

            .custom-table-header th {
                background-color: #103A71 !important;
                color: white !important;
                border-color: #103A71 !important;
            }

        .badge.bg-light {
            color: #495057 !important;
            background-color: #f8f9fa !important;
            border: none !important;
        }
    </style>
}
