@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.EmpId</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.EmployeeName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.Department.Name</dd>

            <dt class="col-sm-4">Position</dt>
            <dd class="col-sm-8">
                @if (Model.Manager)
                {
                    <span class="badge bg-success">Manager</span>
                }
                @if (Model.Hr)
                {
                    <span class="badge bg-warning">HR</span>
                }
                @if (!Model.Manager && !Model.Hr)
                {
                    <span class="badge bg-secondary">Employee</span>
                }
            </dd>
        </dl>
    </div>
</div>

@if (Model.LeaveRequests.Any())
{
    <div class="alert alert-info">
        <strong>Note:</strong> This employee has @Model.LeaveRequests.Count leave request(s). All related data will be deleted.
    </div>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="EmpId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
