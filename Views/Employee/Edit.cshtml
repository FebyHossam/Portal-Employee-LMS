@model Employee

@{
    ViewData["Title"] = "Edit Employee";
}

    <h1 class="page-title">
        <i class="fas fa-edit"></i> Edit Employee
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header custom-header">
                    <h5 class="mb-0 text-white">Employee Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="EmpId" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EmployeeName" class="form-label text-dark">Employee Name *</label>
                                    <input asp-for="EmployeeName" class="form-control" required />
                                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label text-dark">Email Address *</label>
                                    <input asp-for="Email" class="form-control" type="email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DeptId" class="form-label text-dark">Department *</label>
                                    <select asp-for="DeptId" class="form-select" asp-items="ViewBag.Departments" required>
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DeptId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PolicyId" class="form-label text-dark">Leave Policy *</label>
                                    <select asp-for="PolicyId" class="form-select" asp-items="ViewBag.Policies" required>
                                        <option value="">-- Select Policy --</option>
                                    </select>
                                    <span asp-validation-for="PolicyId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="LeaveBalance" class="form-label text-dark">Leave Balance</label>
                                    <input asp-for="LeaveBalance" class="form-control" type="number" min="0" max="365" />
                                    <div class="form-text text-muted">Days available for leave</div>
                                    <span asp-validation-for="LeaveBalance" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3 mt-4">
                                    <input class="form-check-input" asp-for="Manager" type="checkbox" />
                                    <label class="form-check-label text-dark" asp-for="Manager">
                                        <i class="fas fa-user-tie text-muted"></i> Is Manager
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3 mt-4">
                                    <input class="form-check-input" asp-for="Hr" type="checkbox" />
                                    <label class="form-check-label text-dark" asp-for="Hr">
                                        <i class="fas fa-users-cog text-muted"></i> Is HR
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <h6 class="text-dark">Manager Information (Optional)</h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ManagerName" class="form-label text-dark">Manager Name</label>
                                    <input asp-for="ManagerName" class="form-control" />
                                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ManagerEmail" class="form-label text-dark">Manager Email</label>
                                    <input asp-for="ManagerEmail" class="form-control" type="email" />
                                    <span asp-validation-for="ManagerEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <h6 class="text-dark">Security Information</h6>

                       

                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light border">
                <div class="card-header bg-light border-bottom">
                    <h6 class="mb-0 text-dark"><i class="fas fa-info-circle text-muted"></i> Edit Information</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong class="text-dark">User Account Linked</strong><br />
                            <small class="text-muted">Changes will affect login credentials</small>
                        </li>
                        <li class="mb-2">
                            <strong class="text-dark">Email Changes</strong><br />
                            <small class="text-muted">Will update login username</small>
                        </li>
                        <li class="mb-2">
                            <strong class="text-dark">Password Field</strong><br />
                            <small class="text-muted">Only fill if you want to change password</small>
                        </li>
                        <li>
                            <strong class="text-dark">Role Changes</strong><br />
                            <small class="text-muted">Manager/HR roles affect system permissions</small>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card bg-light border mt-3">
                <div class="card-body">
                    <h6 class="text-dark"><i class="fas fa-exclamation-triangle text-muted"></i> Important Notes</h6>
                    <ul class="mb-0">
                        <li class="text-dark mb-1">Email must remain unique</li>
                        <li class="text-dark mb-1">Changes take effect immediately</li>
                        <li class="text-dark">Employee will be notified of major changes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <style>
        .page-title {
            margin-top: 35px;
            font-size: 20px;
            font-family: "PT Sans", sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            color: #103A71;
        }

        .custom-header {
            background-color: #103A71 !important;
            border-bottom: 1px solid #103A71 !important;
            color: white !important;
        }

            .custom-header h5 {
                color: white !important;
            }

       
        .card {
            border: 1px solid #dee2e6;
        }

        .form-control, .form-select {
            border: 1px solid #ced4da;
        }

            .form-control:focus, .form-select:focus {
                border-color: #103A71;
                box-shadow: 0 0 0 0.2rem rgba(16, 58, 113, 0.25);
            }

        .btn-primary {
            background-color: #103A71;
            border-color: #103A71;
        }

            .btn-primary:hover {
                background-color: #0d2f5a;
                border-color: #0d2f5a;
            }

        .card.bg-light {
            background-color: #f8f9fa !important;
        }
    </style>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}