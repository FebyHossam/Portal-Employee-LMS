@model List<LeavePolicy>
@{
    ViewData["Title"] = "Leave Policies";
}

    <h1 class="page-title">
        <i class="fas fa-clipboard-list"></i> Leave Policies Management
        <small class="text-muted">(HR Only)</small>
    </h1>

    <div class="row">
        <div class="col-md-9">
            <div class="alert alert-light border">
                <i class="fas fa-info-circle text-muted"></i>
                <strong class="text-dark">Access Level:</strong>
                <span class="text-muted">This section is restricted to HR personnel only.</span>
            </div>

            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Policy
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header custom-header">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-list"></i> Leave Policies
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-dark">ID</th>
                                    <th class="text-dark">Policy Name</th>
                                    <th class="text-dark">Regular Days</th>
                                    <th class="text-dark">Exception Days</th>
                                    <th class="text-dark">Total Days</th>
                                    <th class="text-dark">Employees</th>
                                    <th class="text-dark">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-muted">@item.PolicyId</td>
                                        <td><strong class="text-dark">@item.PolicyName</strong></td>
                                        <td class="text-muted">@item.RegularDays</td>
                                        <td class="text-muted">@item.ExceptionDays</td>
                                        <td>
                                            <span class="text-muted">
                                                @(item.RegularDays + item.ExceptionDays) days
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                @item.Employees.Count employees
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.PolicyId"
                                                   class="btn btn-link btn-sm text-secondary" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.PolicyId"
                                                   class="btn btn-link btn-sm text-secondary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.PolicyId"
                                                   class="btn btn-link btn-sm text-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light border">
                <div class="card-header bg-light border-bottom">
                    <h6 class="mb-0 text-dark"><i class="fas fa-info-circle text-muted"></i> Policy Guidelines</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong class="text-dark">Regular Days</strong><br />
                            <small class="text-muted">Standard annual leave allowance</small>
                        </li>
                        <li class="mb-2">
                            <strong class="text-dark">Exception Days</strong><br />
                            <small class="text-muted">Additional leave for special circumstances</small>
                        </li>
                        <li class="mb-2">
                            <strong class="text-dark">Employee Assignment</strong><br />
                            <small class="text-muted">Policies can be assigned to multiple employees</small>
                        </li>
                        <li>
                            <strong class="text-dark">Management Access</strong><br />
                            <small class="text-muted">Only managers and HR can modify policies</small>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card bg-light border mt-3">
                <div class="card-body">
                    <h6 class="text-dark"><i class="fas fa-lightbulb text-muted"></i> Quick Stats</h6>
                    <ul class="mb-0">
                        <li class="text-muted">Total Policies: @Model.Count</li>
                        <li class="text-muted">Total Assigned: @Model.Sum(p => p.Employees.Count)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <style>
        .page-title {
            margin-top: 35px;
            font-size: 20px;
            font-family: "PT Sans", sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            color: #103A71;
        }

        .custom-header {
            background-color: #103A71 !important;
            border-bottom: 1px solid #103A71 !important;
            color: white !important;
        }

            .custom-header h5 {
                color: white !important;
            }

        .card {
            border: 1px solid #dee2e6;
        }

        .table th {
            border-top: none;
            font-weight: 600;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0,0,0,.025);
        }

        .btn-primary {
            background-color: #103A71;
            border-color: #103A71;
        }

            .btn-primary:hover {
                background-color: #0d2f5a;
                border-color: #0d2f5a;
            }

        .btn-outline-primary {
            color: #103A71;
            border-color: #103A71;
        }

            .btn-outline-primary:hover {
                background-color: #103A71;
                border-color: #103A71;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-dark {
            background-color: #343a40;
            border-color: #343a40;
        }

        .card.bg-light {
            background-color: #f8f9fa !important;
        }

        .badge {
            font-size: 0.75em;
        }

        .alert-light {
            background-color: #f8f9fa;
            color: #495057;
        }

        .btn-group .btn {
            margin-right: 2px;
            border: none;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }
    </style>
}