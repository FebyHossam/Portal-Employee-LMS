@model List<Department>
@{
    ViewData["Title"] = "Departments";
}

    <h1 class="page-title">
        <i class="fas fa-building"></i> Departments Management
    </h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Department
        </a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-light border border-success alert-dismissible fade show">
            <i class="fas fa-check-circle text-success"></i>
            <span class="text-dark">@TempData["SuccessMessage"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-light border border-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle text-danger"></i>
            <span class="text-dark">@TempData["ErrorMessage"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="custom-table-header">
                        <tr>
                            <th>ID</th>
                            <th>Department Name</th>
                            <th>Employees Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-dark">@item.DeptId</td>
                                <td class="text-dark"><strong>@item.Name</strong></td>
                                <td class="text-dark">
                                    <span class="badge bg-light text-dark border">@item.Employees.Count employees</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.DeptId"
                                           class="btn btn-link btn-sm text-secondary" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.DeptId"
                                           class="btn btn-link btn-sm text-secondary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DeptId"
                                           class="btn btn-link btn-sm text-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-4">
            <div class="card bg-light border">
                <div class="card-body">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h5 class="text-dark">No Departments Found</h5>
                    <p class="text-muted">Start by creating your first department to organize employees.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Department
                    </a>
                </div>
            </div>
        </div>
    }


@section Scripts {
    <style>
        .page-title {
            margin-top: 35px;
            font-size: 20px;
            font-family: "PT Sans", sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            color: #103A71;
        }

        .custom-table-header {
            background-color: #103A71 !important;
            color: white !important;
        }

            .custom-table-header th {
                background-color: #103A71 !important;
                color: white !important;
                border-color: #103A71 !important;
            }

        .btn-primary {
            background-color: #103A71;
            border-color: #103A71;
        }

            .btn-primary:hover {
                background-color: #0d2f5a;
                border-color: #0d2f5a;
            }

        .badge.bg-light {
            background-color: #f8f9fa !important;
            border: 1px solid #dee2e6 !important;
        }

        .card {
            border: 1px solid #dee2e6;
        }

            .card.bg-light {
                background-color: #f8f9fa !important;
            }

        .alert-light {
            background-color: #f8f9fa;
            color: #495057;
        }
    </style>
}